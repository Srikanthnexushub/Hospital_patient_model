# ─────────────────────────────────────────────────────────────────────────────
# Hospital Patient Module — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ─────────────────────────────────────────────────────────────────────────────

# ── Database ──────────────────────────────────────────────────────────────────
DB_HOST=db
DB_PORT=5432
DB_NAME=hospital_patients
DB_USER=patient_app
# REQUIRED: Set a strong password before first run
DB_PASSWORD=ChangeMe123!

# ── Backend ───────────────────────────────────────────────────────────────────
SERVER_PORT=8080
# REQUIRED: 256-bit secret for JWT signature validation (min 32 chars)
JWT_SECRET=your-256-bit-secret-key-here-change-this-in-production
LOG_LEVEL=INFO

# ── Connection Pool ───────────────────────────────────────────────────────────
DB_POOL_MIN=5
DB_POOL_MAX=20

# ── Frontend ──────────────────────────────────────────────────────────────────
# API base URL as seen from the browser (goes through Nginx reverse proxy)
REACT_APP_API_BASE_URL=https://localhost/api/v1
# Vite build-time env var (prefix with VITE_ for client-side access)
VITE_API_BASE_URL=https://localhost/api/v1

# ── Nginx ─────────────────────────────────────────────────────────────────────
NGINX_SERVER_NAME=localhost
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ── Auth Module ───────────────────────────────────────────────────────────────
ADMIN_USERNAME=admin
# REQUIRED: No default. Application refuses to start if absent.
ADMIN_INITIAL_PASSWORD=ChangeMe@Hospital1!

# ── Token Expiry (optional — defaults shown) ──────────────────────────────────
APP_JWT_EXPIRATION_HOURS=8
APP_JWT_REFRESH_EXPIRATION_HOURS=24

# ── Account Lockout (optional — defaults shown) ───────────────────────────────
AUTH_LOCKOUT_MAX_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MINUTES=15

# ── Appointment Module (Module 3) ─────────────────────────────────────────────
# REQUIRED: Base64-encoded 32-byte AES-256 key for clinical notes encryption
# Generate with: openssl rand -base64 32
APP_NOTES_ENCRYPTION_KEY=your-base64-encoded-32-byte-key-here
